<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SupportActivity"
    android:background="#869CEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:id="@+id/back_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:src="@drawable/leftaew"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:text="Support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:text="Take Support from Us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GariBD is your go-to platform for buying and selling second-hand cars and bikes in Bangladesh. We're here to help!"
                android:textColor="#666666"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Contact Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ Email: garibd2025@gmail.com"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Address: Uttara,Dhaka, Bangladesh"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Message Input -->
            <EditText
                android:id="@+id/edit_message"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/input_bg"
                android:hint="Type your message here..."
                android:padding="12dp"
                android:gravity="top|start"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:minLines="4"
                android:layout_marginBottom="16dp"/>

            <!-- Send Button -->
            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Message"
                android:backgroundTint="#FF6F00"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>