<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/back_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@drawable/leftaew"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>

        <!-- Notification Switch -->
        <LinearLayout
            android:id="@+id/layout_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@drawable/notification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Notification"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/switch_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Dark Mode Switch -->
        <LinearLayout
            android:id="@+id/layout_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@drawable/mode"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Dark Mode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/switch_dark_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Rate App -->
        <LinearLayout
            android:id="@+id/layout_rate_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@drawable/rate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Rate App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Add similar layouts for: Share App, Privacy Policy, Terms, Contact, Feedback -->

        <!-- Logout -->
        <LinearLayout
            android:id="@+id/layout_share_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@drawable/share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Share App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@drawable/privacy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Privacy Policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@drawable/termsandconditons"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Terms And Conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_cookies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@drawable/cookies_policy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Cookies Policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingVertical="12dp">

            <ImageView
                android:src="@drawable/feedback"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:text="Feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>