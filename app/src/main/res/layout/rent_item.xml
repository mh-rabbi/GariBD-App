<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:background="@drawable/itemshape">
    <ImageView
        android:id="@+id/com_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/rent1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/com_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textColor="#2841FF"
            android:textSize="25sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/com_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="company@gmail.com"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/com_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+8801882403849"
            android:textColor="#F21F1F"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>